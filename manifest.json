{
  "manifest_version": 2,

  "name": "EkşiR",
  "description": "Ekşisözlüğü canlı takip edin.",
  "version": "1.12",

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",


  "browser_action":{
    "default_icon": "css/images/favicon.png",
    "default_title": "EkşiR - Modern ekşisözlük"
  },

  "permissions": [
    "activeTab",
    "https://eksisozluk.com/"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "homepage_url": "http://eksir.com"
}
