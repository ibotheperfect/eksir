{
  "manifest_version": 2,

  "name": "EkşiR",
  "description": "Realtime ekşisözlük reading.",
  "version": "1.0",



  "browser_action":{
    "default_icon": "img/favicon.png",
    "default_title": "EkşiR - Realtime Ekşisözluk Reader"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://eksisozluk.com/"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "homepage_url": "http://eksir.com"
}